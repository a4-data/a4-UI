{
  "name": "ext-web-components-bundler",
  "version": "7.0.0",
  "description": "ext-web-components-bundler",
  "main": "index.js",
  "scripts": {
    "start": "npm run clean && npm run sencha && npm run both && npm run gzipall && npm run copytomin",
    "clean": "rimraf dist && rimraf build && rimraf buildext && rimraf temp",

    "sencha": "npx sencha app build && npm run mkdist && npm run copyextdev && npm run copyextprod",
    "mkdist": "mkdir dist",
    "copyextdev": "cp -R ./buildext/ext.development.js ./dist/",
    "copyextprod": "cp -R ./buildext/ext.production.js ./dist/",

    "both": "webpack --env.environment=development && webpack --env.environment=production",

    "gzipall": "npm run gzipewc && npm run gzipext && npm run gzipcss",
    "gzipewc": "gzip -c dist/ewc.production.js > dist/ewc.production.js.gz",
    "gzipext": "gzip -c dist/ext.production.js > dist/ext.production.js.gz",
    "gzipcss": "gzip -c dist/css.production.js > dist/css.production.js.gz",

    "copytomin": "rimraf ../ext-web-components-min/dist/ && cp -R dist/ ../ext-web-components-min/dist/",

    "copy2": "cp build/z.js ../sencha-studio-extension/src/scripts2",
    "build:watch": "webpack --config config/webpack.prod.js --watch",
    "serve": "webpack-dev-server --config config/webpack.dev.js"
  },
  "author": "Marc Gusmano",
  "license": "MIT",
  "devDependencies": {
    "@sencha/ext-web-components": "~7.0.0",
    "@sencha/ext-modern": "~7.0.0",
    "@sencha/ext-modern-theme-material": "~7.0.0",
    "@sencha/ext": "~7.0.0",
    "@sencha/cmd": "~7.0.0",
    "rimraf": "^2.6.3",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.3",
    "file-loader": "^4.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "url-loader": "^2.0.1",
    "style-loader": "^0.23.1",
    "script-loader": "^0.7.2",
    "css-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "svg-inline-loader": "^0.8.0",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.2.10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mgusmano"
  }
}
